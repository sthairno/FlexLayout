<Layout>
	<Box style="flex-direction: column; font-size: 14px;">
		<Box style="font-size: 1.5em; padding: 0.5em 1em; border-bottom-width: 2px;">
			<Label>FlexLayout Showcase</Label>
		</Box>
		<Box style="padding: 10px; flex-direction: column; gap: 4px">
			<Box style="border-width: 1px; padding: 6px; flex-direction: column;">
				<Label>&lt;Label style="font-size: 2em;"&gt;Hello, World!&lt;/Label&gt;</Label>
				<Label style="font-size: 2em;">Hello, World!</Label>
			</Box>
			<Box style="border-width: 1px; padding: 6px; flex-direction: column;">
				<Label>&lt;Box style="flex-direction: row; flex-wrap: wrap; gap: 2px; ..."&gt;...&lt;/Box&gt;</Label>
				<Box style="flex-direction: row; flex-wrap: wrap; gap: 2px; width: 200px; border-width: 1px; margin: 10px">
					<Box style="width: 50px; height: 50px; border-width: 1px;"></Box>
					<Box style="width: 50px; height: 50px; border-width: 1px;"></Box>
					<Box style="width: 50px; height: 50px; border-width: 1px;"></Box>
					<Box style="width: 50px; height: 50px; border-width: 1px;"></Box>
					<Box style="width: 50px; height: 50px; border-width: 1px;"></Box>
					<Box style="width: 50px; height: 50px; border-width: 1px;"></Box>
				</Box>
			</Box>
			<Box style="border-width: 1px; padding: 6px; flex-direction: column;">
				<Label>&lt;SimpleGUI.Button id="button" /&gt;</Label>
				<Label>&lt;SimpleGUI.Slider id="slider" /&gt;</Label>
				<SimpleGUI.Button id="button">Button</SimpleGUI.Button>
				<SimpleGUI.Slider id="slider"/>
			</Box>
			<Box style="border-width: 1px; padding: 6px; flex-direction: column;">
				<Label style="line-height: 1.5;">
					document->getElementById(U"clone-template")->cloneNode(true)
				</Label>
				<Box style="padding: 5px 14px; gap: 10px">
					<SimpleGUI.Button id="clone-button">Clone</SimpleGUI.Button>
					<SimpleGUI.Button id="reset-button">Reset</SimpleGUI.Button>
				</Box>
				<Box id="clone-target" style="flex-wrap: wrap; border-width: 1px; padding: 10px; margin: 5px;">
				</Box>
			</Box>
		</Box>
	</Box>
</Layout>